  <% @bookings.each do |booking| %>
    <div class="card-with-info">
      <img class="family-photo" src= <%= booking.homestay.photos.attached? ? cl_image_path(booking.homestay.photos.first.key) : booking.homestay.img_url %>/>
      <div class="info-about-family">
        <h2><%= booking.homestay.user.last_name %> Family</h2>
        <p><strong><%= booking.homestay.address %></strong></p>
        <p><%= booking.booking_start %> - <%= booking.booking_end%></p>
      </div>
      <div class="card-status">
        <% if booking.status == "confirm" %>
          <p class="green-color"><%= booking.status %>ed</p>
        <% elsif booking.status == "decline" %>
          <p class="red-color"><%= booking.status %>d</p>
        <% else %>
          <p class="pending"><%= booking.status %></p>
        <% end %>
      </div>
    </div>
  <% end %>
