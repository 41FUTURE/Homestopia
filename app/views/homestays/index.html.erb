
<div class="main-container container-map">
  <div class="container mt-3 text-justify">
    <div class="message ps-2 pb-3">
      <h1><b>Discover the world!</b></h1>
      <p>Start your next adventure with...</p>
    </div>
    <div class="cards">
      <% @homestays.each do |homestay|  %>
        <%= link_to homestay_path(homestay), class:"text-decoration-none" do %>
          <%= render 'homestay_card', homestay: homestay %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="container mt-5">
    <div class="filter px-4 pb-5">
      <%= render 'filter' %>
    </div>
    <div id="map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
